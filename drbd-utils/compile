#!/bin/sh -eux

ub_compile \
	--with-distro=generic \
	--with-bashcompletion \
	--with-udev \
	--without-rgmanager \
	--without-pacemaker \
	--without-heartbeat \
	--without-83support \
	--with-84support \
	--without-xen \
	--with-initscripttype=systemd \
	--sbindir=/usr/sbin \
	--libdir=/usr/lib \
	--without-manual
