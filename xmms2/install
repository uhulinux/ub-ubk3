#!/bin/sh -eux

waf install --destdir="$UB_INSTALLDIR" --prefix=/usr
chmod 755 "$UB_INSTALLDIR"/usr/lib/libxmmsclient-glib.so.1.0.0
chmod 755 "$UB_INSTALLDIR"/usr/lib/libxmmsclient++-glib.so.1.0.0
chmod 755 "$UB_INSTALLDIR"/usr/lib/libxmmsclient++.so.4.0.0
chmod 755 "$UB_INSTALLDIR"/usr/lib/libxmmsclient.so.6.0.0
